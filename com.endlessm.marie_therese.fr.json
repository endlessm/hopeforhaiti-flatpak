{
    "app-id": "com.endlessm.marie-therese.fr",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "LesAdventuresDeMarieTerese",
    "finish-args": [
            "--share=ipc", "--socket=x11",
            "--device=dri",
            "--filesystem=home",
            "--socket=pulseaudio"
    ],
    "modules": [
    {
        "name": "LesAdventuresDeMarieTerese",
        "buildsystem": "simple",
        "build-commands": [
            "mkdir -p /app/bin",
            "cp LesAdventuresDeMarieTerese /app/bin",
            "chmod +x /app/bin/LesAdventuresDeMarieTerese",
            "mkdir -p /app/share/icons/hicolor/256x256/apps",
            "cp com.endlessm.marie-therese.fr.png /app/share/icons/hicolor/256x256/apps",
            "mkdir -p /app/share/applications",
            "cp com.endlessm.marie-therese.fr.desktop /app/share/applications",
            "mkdir -p /app/share/appdata",
            "cp com.endlessm.marie-therese.fr.appdata.xml /app/share/appdata"
        ],
        "build-options": {
          "no-debuginfo": true
        },
        "sources": [
            {
                "type": "git",
                "url": "https://github.com/HopeForHaiti/Les-Aventures-de-Marie-Terese.git",
                "branch": "22e9ba6ee4c218304b075e023e12e3db1ec693e9"
            },
            {
                "type": "file",
                "path": "com.endlessm.marie-therese.fr.png"
            },
            {
                "type": "file",
                "path": "com.endlessm.marie-therese.fr.desktop"
            },
            {
                "type": "file",
                "path": "com.endlessm.marie-therese.fr.appdata.xml"
            }
        ]
    }
    ]
}
